<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg"
    android:theme="@android:style/Theme.Light"
    tools:context=".profileActivity"
    tools:layout_editor_absoluteX="-2dp"
    tools:layout_editor_absoluteY="-126dp">

    <ImageButton
        android:id="@+id/logoImage"
        android:layout_width="226dp"
        android:layout_height="215dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="4dp"
        android:background="#00FFFFFF"
        android:elevation="1dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/logo_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="169dp"
        android:layout_height="174dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_img2"
        android:elevation="0dp"
        android:rotation="160"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_marginTop="652dp"
        android:background="@drawable/button_img"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="221dp"
        android:layout_height="53dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="647dp"
        android:background="@drawable/text_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/awardwinnersBT"
        android:layout_width="37dp"
        android:layout_height="43dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="652dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:src="@drawable/ic_action_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#561A9F" />

    <ImageButton
        android:id="@+id/comedyBT"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginTop="648dp"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:onClick="mainClick"
        android:scaleType="fitCenter"
        android:src="@mipmap/logo_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <ImageButton
        android:id="@+id/arthouseBT"
        android:layout_width="38dp"
        android:layout_height="42dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="652dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/profile_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#430A8A" />

    <TextView
        android:id="@+id/heyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="216dp"
        android:text="Hey, "
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="405dp"
        android:layout_height="132dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suggestions">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/movieOneImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="movieOnClick"
                app:srcCompat="@drawable/addmovie" />

            <ImageView
                android:id="@+id/movieTwoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="movieOnClick"
                app:srcCompat="@drawable/addmovie" />

            <ImageView
                android:id="@+id/movieThreeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="movieOnClick"
                app:srcCompat="@drawable/addmovie" />

            <ImageView
                android:id="@+id/movieFourImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="movieOnClick"
                app:srcCompat="@drawable/addmovie" />

            <ImageView
                android:id="@+id/movieFiveImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="movieOnClick"
                app:srcCompat="@drawable/addmovie" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="405dp"
        android:layout_height="132dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="200dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suggestions">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/movieOneImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="movieOnClick"
                app:srcCompat="@drawable/addmovie" />

            <ImageView
                android:id="@+id/movieTwoImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="movieOnClick"
                app:srcCompat="@drawable/addmovie" />

            <ImageView
                android:id="@+id/movieThreeImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="movieOnClick"
                app:srcCompat="@drawable/addmovie" />

            <ImageView
                android:id="@+id/movieFourImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="movieOnClick"
                app:srcCompat="@drawable/addmovie" />

            <ImageView
                android:id="@+id/movieFiveImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="movieOnClick"
                app:srcCompat="@drawable/addmovie" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/suggestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="12dp"
        android:text="Suggestions"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heyView" />

    <TextView
        android:id="@+id/Popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="37dp"
        android:text="Popular Hits"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />
</androidx.constraintlayout.widget.ConstraintLayout>