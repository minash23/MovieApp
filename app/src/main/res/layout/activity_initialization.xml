<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg"
    android:theme="@android:style/Theme.Light"
    tools:context=".Initialization">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:text="@string/let_s_get_to_know_you"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="@string/what_are_your_top_3_favorite_movies"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/addmovie" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/addmovie" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/addmovie" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/what_are_your_favorite_genres"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="356dp"
        android:layout_height="189dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/actionBT"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/action"
                android:textSize="12sp"
                android:backgroundTint="#d3d3d3"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="779dp" />

            <Button
                android:id="@+id/feelgoodBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/feel_good"
                android:backgroundTint="#d3d3d3"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/dramaBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/drama"
                android:backgroundTint="#d3d3d3"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/awardwinnersBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/award_winners"
                android:layout_weight="0"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="779dp"
                android:backgroundTint="#d3d3d3"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/comedyBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="@string/comedy"
                android:backgroundTint="#d3d3d3"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/arthouseBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/art_house"
                android:backgroundTint="#d3d3d3"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/thrillerBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thriller"
                android:layout_weight="10"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="779dp"
                android:backgroundTint="#d3d3d3"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/horrorBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/horror"
                android:backgroundTint="#d3d3d3"
                android:textColor="@color/black"
                android:layout_weight="10"/>

            <Button
                android:id="@+id/kidsmovieBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/kids_movies"
                android:backgroundTint="#d3d3d3"
                android:textColor="@color/black"
                android:layout_weight="0"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/documentaryBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/documentary"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="779dp"
                android:backgroundTint="#d3d3d3"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/truestoryBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/true_stories"
                android:backgroundTint="#d3d3d3"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView4"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/what_streaming_platforms_do_you_have"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Button
        android:id="@+id/letswatchBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/let_s_watch"
        android:backgroundTint="@color/white"
        android:textColor="#66458E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/appletv" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/disneyplus" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hbo" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hulu" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/netflix" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/peacock" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/prime" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>