<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg"
    android:theme="@android:style/Theme.Light"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="130dp"
        android:background="#00FFFFFF"
        android:elevation="1dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/logo_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <TextView
        android:id="@+id/textView0"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="155dp"
        android:background="@drawable/button_img2"
        android:elevation="0dp"
        android:rotation="160"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:text="Let's find a film!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dramaBT"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="484dp"
        android:backgroundTint="@color/white"
        android:text="Drama"
        android:textColor="#66458E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/feelgoodBT"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="347dp"
        android:layout_height="47dp"
        android:layout_marginTop="412dp"
        android:ems="10"
        android:hint="What's the vibe?"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="129dp"
        android:layout_height="26dp"
        android:layout_marginTop="376dp"
        android:text="Set The Mood"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/feelgoodBT"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="484dp"
        android:backgroundTint="@color/white"
        android:text="Feel Good"
        android:textColor="#66458E"
        app:layout_constraintEnd_toStartOf="@+id/dramaBT"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/actionBT"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/actionBT"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="484dp"
        android:backgroundTint="@color/white"
        android:text="Action"
        android:textColor="#66458E"
        app:layout_constraintEnd_toStartOf="@+id/feelgoodBT"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_marginTop="652dp"
        android:background="@drawable/button_img"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="221dp"
        android:layout_height="53dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="647dp"
        android:background="@drawable/text_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/awardwinnersBT"
        android:layout_width="37dp"
        android:layout_height="43dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="652dp"
        android:background="@color/white"
        android:src="@drawable/ic_action_name"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#561A9F" />

    <ImageButton
        android:id="@+id/comedyBT"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginTop="648dp"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/logo_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <ImageButton
        android:id="@+id/arthouseBT"
        android:layout_width="38dp"
        android:layout_height="42dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="652dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/profile_icon"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#430A8A" />
</androidx.constraintlayout.widget.ConstraintLayout>